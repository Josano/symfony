{% extends "::base.html.twig" %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading">Editar Fabricante</div>
        	<div class="panel-body">
				<form class="form-horizontal" action="{{ path('fabricante_update', {'id': entity.id}) }}" method="post">
	            	<fieldset>									
						<div class="form-group">
							{{ form_start(form) }}

								{{ form_label(form.nome, 'Nome: ', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
							<div class="col-xs-4">
								{{ form_widget(form.nome, { 'attr': {'class': 'form-control'} }) }}
							</div>

							{{ form_end(form) }}
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<button type="submit" class="btn btn-success">
								<span class="glyphicon glyphicon-saved"> Salvar</button>
								<a href="{{ path('fabricante') }}" class="btn btn-info">
								<span class="glyphicon glyphicon-step-backward"></span> Voltar</a>
							</div>
						</div>
					<fieldset>										
				</form>
       		 </div>
    	</div>
	</div>
{% endblock %}
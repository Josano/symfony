{% extends "::base.html.twig" %}

{% block body %}

	<div class="container">
		<h1>Fabricantes</h1>
		<p>
		<a href="{{ path('fabricante_new') }}" class="btn btn-default">Novo Produto</a>
		</p>
		<table class="table">
			<tr>
				<th>ID</th>
				<th>Nome</th>
				<th>Ação</th>
			</tr>

			{% for fabricante in fabricantes %}
				<tr>
					<td>{{ fabricante.id }}</td>
					<td>{{ fabricante.nome }}</td>
					<td></td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}
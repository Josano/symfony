{% extends "::base.html.twig" %}

{% block body %}

	<div class="container">
		<h1>Fabricantes</h1>
		<p>
		<a href="{{ path('fabricante_new') }}" class="btn btn-default">
		<span class="glyphicon glyphicon-plus"></span> Novo Fabricante</a>
		</p>
		<table class="table">
			<tr>
				<th>ID</th>
				<th>Nome</th>
				<th>Ação</th>
			</tr>

			{% for fabricante in fabricantes %}
				<tr>
					<td>{{ fabricante.id }}</td>
					<td>{{ fabricante.nome }}</td>
					<td><a href="{{ path('fabricante_edit', {'id': fabricante.id})}}" class="btn btn-info">
          				<span class="glyphicon glyphicon-edit"></span> Editar </a>  
          				<a href="{{ path('fabricante_delete', {'id': fabricante.id})}}" class="btn btn-danger">
          				<span class="glyphicon glyphicon-remove"></span> Deletar </a>
          			</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}